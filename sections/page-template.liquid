{% if section.settings.page_show_title %}
  <div class="section-header text-center">
    <h1>{{ page.title }}</h1>
  </div>
{% endif %}


{% schema %}
  {
    "name": "Page Content",
    "settings": [
      {
        "id": "page_show_title",
        "type": "checkbox",
        "label": "Show page title",
        "default": false
      },
      {
        "type": "text",
        "id": "new_page_title",
        "label": "Page Title"
      }
    ]
  }
{% endschema %}