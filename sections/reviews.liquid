<div class="page-width" data-section-id="{{ section.id }}" data-section-type="reviews">
  {% if section.settings.title != blank %}
    <div class="section-header text-left">
      <h2>{{ section.settings.title | escape }}</h2>
    </div>
  {% endif %}

  {% if section.blocks.size > 0 %}
    <div class="reviews-wrapper">
      <div class="reviews-slider" id="Reviews-{{ section.id }}" data-count="{{ section.blocks.size }}">
        {% for block in section.blocks %}
          <div class="reviews-slide--{{ block.id }}" {{ block.shopify_attributes }}>
            <blockquote class="reviews-slider__text text-center">
              {% if block.settings.quote != blank %}
                <div class="rte-setting">{{ block.settings.quote }}
                  {% if block.settings.author != blank %}
                    <cite>{{ block.settings.author | escape }}</cite>
                  {% endif %}
                </div>
                {% if block.settings.class_link != blank %}
                  <div><a href="{{ block.settings.class_link | escape }}"><em>{{ block.settings.class_label }}</em></a></div>
                {% endif %}
                </div>
              {% endif %}
            </blockquote>
          </div>
        {% endfor %}
      </div>
    </div>
  {% endif %}

  {% if section.blocks.size == 0 %}
    {% include 'no-blocks' %}
  {% endif %}
</div>

{% schema %}
  {
    "name": "Reviews",
    "max_blocks": 9,
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Reviews"
      }
    ],
    "blocks": [
      {
        "type": "review",
        "name": "Review",
        "settings": [
          {
            "type": "richtext",
            "id": "quote",
            "label": "Text",
            "default": "<p>Add customer reviews and testimonials to showcase your storeâ€™s happy customers.</p>"
          },
          {
            "type": "text",
            "id": "author",
            "label": "Author",
            "default": "Author's name"
          },
          {
            "type": "text",
            "id": "class_label",
            "label": "Link label",
            "default": "View class"
          },
          {
            "type": "url",
            "id": "class_link",
            "label": "Link"
          }
        ]
      }
    ]
  }
{% endschema %}
