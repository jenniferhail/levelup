<div class="page-width">
  {% for block in section.blocks %}
    <div class="grid-item" {{ block.shopify_attributes }}>

      {% case block.type %}

        {% when 'richtext' %}
          {% include 'snippet_richtext' %}

        {% when 'blog' %}
          {% include 'snippet_blog_grid_3' %}

        {% when 'form' %}
          {% include 'snippet_form' %}

        {% when 'image' %}
          {% include 'snippet_imagetextoverlay' %}

      {% endcase %}

    </div>
  {% endfor %}
</div>


{% schema %}
  {
    "name": "Page Content",
    "class": "page-section",
    "blocks": [
      {
        "type": "richtext",
        "name": "Text",
        "limit": 2,
        "settings": [
          {
            "id": "contentHeading",
            "type": "text",
            "label": "Heading",
            "default": "Add your title here"
          },
          {
            "id": "content",
            "type": "richtext",
            "label": "Text",
            "default": "<p>Use this text to share information about your team with your customers.</p>"
          }
        ]
      },
      {
        "type": "form",
        "name": "Form",
        "limit": 1,
        "settings": [
          {
            "id": "formHeading",
            "type": "text",
            "label": "Heading",
            "default": "Add your title here"
          },
          {
            "id": "formContent",
            "type": "richtext",
            "label": "Text",
            "default": "<p>Use this text to share information about your team with your customers.</p>"
          },
          {
            "id": "formCode",
            "type": "html",
            "label": "Code Snippet",
            "default": "<p>Paste the code snippet for your form here.</p>"
          }
        ]
      },
      {
        "type": "blog",
        "name": "Profiles",
        "limit": 1,
        "settings": [
          {
            "id": "team_blog",
            "type": "blog",
            "label": "Blog"
          }
        ]
      },
      {
        "type": "image",
        "name": "Image with text overlay",
        "limit": 1,
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "select",
            "id": "alignment",
            "label": "Image alignment",
            "default": "center",
            "options": [
              {
                "value": "top",
                "label": "Top"
              },
              {
                "value": "center",
                "label": "Middle"
              },
              {
                "value": "bottom",
                "label": "Bottom"
              }
            ]
          },
          {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "Image with text overlay"
          },
          {
            "type": "richtext",
            "id": "text",
            "label": "Text",
            "default": "<p>Use overlay text to give your customers insight into your brand. Select imagery and text that relates to your style and story.</p>"
          },
          {
            "type": "select",
            "id": "hero_size",
            "label": "Section height",
            "default": "medium",
            "options": [
              {
                "label": "Extra Small",
                "value": "x-small"
              },
              {
                "label": "Small",
                "value": "small"
              },
              {
                "label": "Medium",
                "value": "medium"
              },
              {
                "label": "Large",
                "value": "large"
              },
              {
                "label": "Extra Large",
                "value": "x-large"
              }
            ]
          },
          {
            "type": "select",
            "id": "text_size",
            "label": "Text size",
            "default": "medium",
            "options": [
              {
                "label": "Medium",
                "value": "medium"
              },
              {
                "label": "Large",
                "value": "large"
              }
            ]
          },
          {
            "type": "text",
            "id": "button_label",
            "label": "Button label"
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
          }
        ]
      }
    ]
  }

{% endschema %}